    <ItemGroup>
        <ProjectReference Include="..\Meca.ApplicationService\Meca.ApplicationService.csproj" />
        <ProjectReference Include="..\Meca.Data\Meca.Data.csproj" />
        <ProjectReference Include="..\Meca.Domain\Meca.Domain.csproj" />
        <ProjectReference Include="..\..\..\megaleios-utilityframework-5af25bfd220b\src\UtilityFramework.Application.Core3\UtilityFramework.Application.Core3.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="appsettings.Production.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="Settings/Config.json">
